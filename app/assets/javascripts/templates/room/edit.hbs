<div id="checkRoomPresence"></div>


<div class="editRoomView">

	<label class="sized-text fifties blk-text"> {{titleText}} <u> {{name}}</u> </label>
	<form id="{{editID}}" action="/api/rooms/{{room_id}}.json" accept-charset="UTF-8" method="PUT">

		<input type="hidden" name="authenticity_token" value="{{token}}">

		{{!-- Room Data --}}
		<input class="form-control" type="text" autocomplete="off" id="roomName" placeholder="Room Name" name="room[name]">
  
		<br>
		<input class="form-control" type="text" autocomplete="off" id="roomPrivacy" placeholder="Room Privacy" name="room[privacy]">
		<br>
		<input class="form-control" type="text" autocomplete="off" id="roomPassword" placeholder="Room Password" name="room[password]">

		<input type="hidden" name="room[id]" value="{{room_id}}">

		<br>
		<input type="submit" class="btn btn-success btn-lg btn-block fifties"  value="Confirm room edit">
		<br><br>
	</form>


	<button class="btn btn-secondary btn-lg btn-block fifties" id="{{DeleteButton}}">{{DeleteText}}</button>
	<form style="display: none;" id="{{deleteID}}" method="DELETE">
		<br>
		<input type="hidden" name="authenticity_token" value="{{token}}">
		<input placeholder="Type room name" class="form-control" type="text" autocomplete="off" id="confirmRoomName">
		<br>
		<input type="hidden" id="roomID" name="room[room_id]" value="{{room_id}}">
		<input type="submit" class="btn btn-danger btn-lg btn-block fifties" value="Confirm room delete">
	</form>
</div>
